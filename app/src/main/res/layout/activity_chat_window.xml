<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:fitsSystemWindows="true"
    android:background="@drawable/wallpaper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ChatWindow">
    <LinearLayout
        android:id="@+id/ll1"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/h_Image1111"
                android:layout_width="50dp"
                app:shapeAppearance="@style/roundedImageView"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile11" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:textColor="@color/IconColor"
                    android:text="UserName"
                    android:layout_marginBottom="30dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/more"
            android:tint="@color/IconColor"
            android:layout_margin="10dp"
            tools:ignore="UseAppTint" />


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_room_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll3"
        android:layout_below="@id/ll1" />
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <!-- Message Input CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="@color/cardBacground"
                android:layout_weight="1"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:visibility="visible"
                        android:id="@+id/dropdown_menu1"
                        android:backgroundTint="@color/menuBackgroun"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_vertical|center_horizontal|center"
                            android:tint="@color/menuIcon"
                            android:src="@drawable/plus"
                            tools:ignore="UseAppTint" />

                    </androidx.cardview.widget.CardView>

                    <!-- Editable Text -->
                    <EditText
                        android:id="@+id/textmsg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scrollbars="vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Write The Message..."

                        android:maxLines="5"
                        android:padding="3dp"
                        android:textColor="@color/IconColor"
                        android:textSize="19dp" />

                    <!-- Attachment Icon -->
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:backgroundTint="@color/color_sendre"
                        android:id="@+id/sendbtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:id="@+id/sendimg"
                            android:layout_width="wrap_content"
                            android:scaleType="centerCrop"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal|center"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"

                            android:src="@drawable/send" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Send Button -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expanded_menu1"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:columnCount="4"
                android:rowCount="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/big_message_input"
                android:orientation="horizontal">
                <LinearLayout
                    android:padding="2dp"
                    android:id="@+id/music"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/music"
                        android:background="@drawable/bigcircluebtn">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gellary"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/image"
                        android:background="@drawable/bigcircluebtn"
                        android:contentDescription="Gallery">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gellary"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Audio"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/audio"
                        android:background="@drawable/bigcircluebtn"
                        android:contentDescription="Gallery">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audio"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/video"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/vedio"
                        android:background="@drawable/bigcircluebtn"
                        android:contentDescription="Gallery">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/expanded_menu2"
                android:visibility="gone"
                android:columnCount="4"
                android:rowCount="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/big_message_input"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/Room"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/room"
                        android:background="@drawable/bigcircluebtn">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Room"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/JioSaavan"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <com.google.android.material.imageview.ShapeableImageView
                        app:shapeAppearanceOverlay="@style/roundedImageView"
                        android:scaleType="centerCrop"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/jiosaavan2">
                    </com.google.android.material.imageview.ShapeableImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="JioSaavan"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Spotify"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/spotify"

                        android:background="@drawable/bigcircluebtn"
                        android:contentDescription="Gallery">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spotify"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/WinkMusic"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:scaleType="centerCrop"
                        android:scaleY="0.7"
                        android:scaleX="0.7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wynkmusic"
                        android:background="@drawable/bigcircluebtn"
                        app:shapeAppearanceOverlay="@style/roundedImageView"
                        android:contentDescription="Gallery">
                    </com.google.android.material.imageview.ShapeableImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WinkMusic"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>

</RelativeLayout>