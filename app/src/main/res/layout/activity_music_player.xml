<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicPlayer">
    <RelativeLayout
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/musicPleyar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music Pleyar"
                android:textSize="30dp"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/up"
        android:layout_above="@id/down"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="NotSibling">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            android:backgroundTint="#2c3f38"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image000"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="91dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="141dp"
                android:scaleType="centerCrop"
                android:src="@drawable/andra" />

            <LinearLayout
                android:layout_marginTop="250dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:text="Song Tittle"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:text="Song Tittle"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/liteWhite"
                    android:layout_marginStart="10dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <SeekBar
            android:layout_marginTop="10dp"
            android:progressTint="@color/sender_side"
            android:thumbTint="@color/sender_side"

            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/strt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="00:00"
                android:layout_height="wrap_content"
                android:layout_marginStart="11.2dp"/>
            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:11"
                android:layout_marginEnd="11.2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/play_bv"
                android:tint="@color/IconColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/backward"
                tools:ignore="UseAppTint" />
            <ImageView
                android:id="@+id/play_bt"
                android:layout_width="80dp"
                android:backgroundTint="@color/IconColor"
                android:layout_height="80dp"
                android:src="@drawable/play22"
                app:tint="@color/IconColor" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/pause_bt"
                android:layout_width="80dp"
                android:backgroundTint="@color/IconColor"
                android:layout_height="80dp"
                android:src="@drawable/pause"
                app:tint="@color/IconColor" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/PauseButton"
                android:layout_width="80dp"
                android:backgroundTint="@color/IconColor"
                android:layout_height="80dp"
                android:src="@drawable/pause"
                app:tint="@color/IconColor" />



            <ImageButton
                android:id="@+id/playfv"
                android:tint="@color/IconColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/forward"
                tools:ignore="UseAppTint" />
        </LinearLayout>


    </LinearLayout>

  </RelativeLayout>