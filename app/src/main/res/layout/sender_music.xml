<RelativeLayout
    android:id="@+id/sendImagesChat"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/images"
            android:layout_width="350dp"
            android:elevation="10dp"
            android:backgroundTint="@color/sender22"
            android:layout_height="185dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="5dp"
            tools:targetApi="34">
            <androidx.cardview.widget.CardView
                android:backgroundTint="#2c3f38"
                android:layout_margin="2dp"
                app:cardCornerRadius="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/bgSongImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10.9dp"
                        android:layout_marginTop="87.2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_marginRight="8.5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/songname"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/artistName"
                                android:textColor="@color/liteWhite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1" />
                        </LinearLayout>
                        <ImageView
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:id="@+id/play_bt11"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/play22"
                            app:tint="@color/white"
                            tools:ignore="DuplicateIds" />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/pause_bt"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pause"
                            app:tint="@color/IconColor" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="145dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_below="@+id/seekbarchat11"
                            android:layout_above="@id/directionalMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/previous_dark"/>
                            <SeekBar
                                android:layout_marginTop="3dp"
                                android:progressTint="@color/white"
                                android:thumbTint="@color/white"
                                android:layout_marginBottom="8dp"
                                android:id="@+id/seekbarchat111"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:layout_marginRight="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/forward_night"/>


                            <TextView
                                android:layout_marginTop="2dp"
                                android:id="@+id/sondDuaretion11"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/directionalMenu"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>





        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>